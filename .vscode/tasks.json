{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C++ con Qt6 y PostgreSQL",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I",
                "C:/msys64/ucrt64/include/qt6",
                "-I",
                "C:/msys64/ucrt64/include/qt6/QtCore",
                "-I",
                "C:/msys64/ucrt64/include/qt6/QtGui",
                "-I",
                "C:/msys64/ucrt64/include/qt6/QtWidgets",
                "-L",
                "C:/msys64/ucrt64/lib",
                "-lQt6Core",
                "-lQt6Gui",
                "-lQt6Widgets",
                "-I",
                "C:/Program Files/PostgreSQL/15/include",
                "-L",
                "C:/Program Files/PostgreSQL/15/lib",
                "-lpq"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila un archivo C++ usando Qt6 y PostgreSQL"
        },
        {
            "type": "cppbuild",
